<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="main-menu">
    <item>
      <attribute name="label" translatable="yes">_Close window</attribute>
      <attribute name="action">app.quit</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">_About</attribute>
      <attribute name="action">app.about</attribute>
    </item>
  </menu>
  <template class="Sonic4ModManager" parent="GtkApplicationWindow">
    <property name="title">Sonic 4 Mod Manager</property>
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <child type ="start">
          <object class="GtkImage">
            <property name="icon-name">icon</property>
            <property name="icon-size">2</property>
            <property name="margin-start">4</property>
            <property name="margin-end">4</property>
          </object>
        </child>
        <child type ="end">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">main-menu</property>
            <property name="tooltip-text" translatable="yes">Main Menu</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
        <property name="margin-start">8</property>
        <property name="margin-end">8</property>
        <property name="margin-top">8</property>
        <property name="margin-bottom">8</property>
        <property name="row-spacing">8</property>
        <child>
          <object class="GtkGrid">
            <property name="column-spacing">8</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
            <child>
              <object class="GtkScrolledWindow">
                <property name="width-request">760</property>
                <property name="height-request">300</property>
                <child>
                  <object class="GListStore" id="mod_store" />
                </child>
                <child>
                  <object class="GtkListBox" id="mod_list">
                    <property name="selection-mode">2</property>
                    <style>
                      <class name="boxed-list" />
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkGrid">
                <property name="row-spacing">8</property>
                <property name="column-homogeneous">true</property>
                <property name="row-homogeneous">true</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.move_mod_to_top</property>
                    <property name="label">/\
/\</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.move_mod_up</property>
                    <property name="label">/\</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.move_mod_down</property>
                    <property name="label">\/</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.move_mod_to_bottom</property>
                    <property name="label">\/
\/</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkFrame">
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
            <property name="label">Description</property>
            <child>
              <object class="GtkTextView" id="description">
                <property name="wrap-mode">word-char</property>
                <property name="editable">false</property>
                <property name="width-request">-1</property>
                <property name="height-request">160</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkGrid">
            <property name="column-spacing">8</property>
            <property name="row-spacing">8</property>
            <property name="column-homogeneous">true</property>
            <property name="row-homogeneous">true</property>
            <property name="height-request">128</property>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
            <child>
              <object class="GtkButton">
                <property name="label">Save</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label">Save and Play</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
                <property name="action-name">win.check_mod</property>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label">Open in Explorer</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="refresh_button">
                <property name="label">Refresh</property>
                <layout>
                  <property name="column">2</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label">Random</property>
                <layout>
                  <property name="column">2</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label"></property>
                <layout>
                  <property name="column">3</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label">Settings</property>
                <layout>
                  <property name="column">4</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label">Exit</property>
                <layout>
                  <property name="column">4</property>
                  <property name="row">1</property>
                </layout>
                <property name="action-name">app.quit</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
