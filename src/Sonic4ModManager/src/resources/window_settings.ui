<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="Settings" parent="AdwApplicationWindow">
    <property name="title">Settings</property>
    <property name="width-request">360</property>
    <property name="height-request">200</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 300sp</condition>
      </object>
    </child>
    <property name="content">
      <object class="AdwMultiLayoutView" id="view">
        <child>
          <object class="AdwLayout">
            <property name="content">
              <object class="AdwOverlaySplitView">
                <property name="sidebar">
                  <object class="AdwToolbarView">
                    <property name="content">
                      <object class="AdwLayoutSlot">
                        <property name="id">sidebar</property>
                      </object>
                    </property>
                  </object>
                </property>
                <property name="content">
                  <object class="AdwToolbarView">
                    <child type="top">
                      <object class="AdwHeaderBar">
                        <property name="show-end-title-buttons">false</property>
                        <child type ="end">
                          <object class="GtkButton">
                            <property name="label" translatable="yes">Save</property>
                            <property name="action-name">win.save</property>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                        <child type ="end">
                          <object class="GtkButton">
                            <property name="label" translatable="yes">Discard</property>
                            <property name="action-name">win.close</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <property name="content">
                      <object class="AdwLayoutSlot">
                        <property name="id">content</property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <child type="sidebar">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Sidebar</property>
            <property name="child">
              <object class="AdwToolbarView">
                <property name="content">
                  <object class="GtkStackSidebar">
                    <property name="stack">stack</property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <child type="content">
          <object class="AdwNavigationPage" id="content_page">
            <property name="title" translatable="yes">Content</property>
            <property name="child">
              <object class="GtkStack" id="stack">
                <child>
                  <object class="GtkStackPage">
                    <property name="title" translatable="yes">Installation</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Installation Status:</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="label_installation_status">
                            <property name="label">//Installation status goes here</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="button_un_install">
                            <property name="label">(Un)install</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_force_uninstall">
                            <property name="label">Force uninstall</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Uninstallation options:</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_rename_files_back">
                            <property name="label">Rename files back</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_delete_all_mod_loader_files">
                            <property name="label">Delete all Mod Loader files</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_keep_configs">
                            <property name="label">Keep configs</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_uninstall_and_delete_ocmi">
                            <property name="label">Uninstall and delete One-Click Mod Installer</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_recover_original_files">
                            <property name="label">Recover original game files (AMBs, CSBs, ...)</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="title" translatable="yes">AMBPatcher</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_progress_bar">
                            <property name="label">Progress Bar</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_check_sha_of_files">
                            <property name="label">Check SHA of files (recommended)</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="label">Recover original files</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="title" translatable="yes">CSBEditor</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Buffer size</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkEntry" id="entry_buffer_size"/>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkCheckButton" id="checkbutton_enable_threading">
                            <property name="label">Enable threading</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Max threads</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkEntry" id="entry_max_threads"></object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
